<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Register_Ativity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/minilogo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:textColor="@color/blue"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="S'inscrire" />

    </LinearLayout>

    <EditText
        android:id="@+id/nomUtilisateurRegister"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_edit_text"
        android:ems="10"
        android:hint="Nom"
        android:textColorHint="@color/darkgray"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/emailRegister"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_edit_text"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/darkgray"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/mdpRegister"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_edit_text"
        android:ems="10"
        android:hint="Mot de passe"
        android:inputType="textPassword"
        android:textColorHint="@color/darkgray"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/phoneRegister"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_edit_text"
        android:ems="10"
        android:hint="Téléphone"
        android:inputType="phone"
        android:textColorHint="@color/darkgray"
        android:paddingLeft="10dp" />


    <Spinner
        android:id="@+id/spinnerlevel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"/>
    <Spinner
        android:id="@+id/spinnerField"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"/>



    <EditText
        android:id="@+id/etablissementRegister"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_edit_text"
        android:ems="10"
        android:hint="Etablissement"
        android:textColorHint="@color/darkgray"
        android:paddingLeft="10dp" />

    <Button
        android:id="@+id/registerbtn"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:text="S'inscrire"
        android:textColor="@color/white"
        android:background="@drawable/bouton_style"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/retourLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retour à la page de login."
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#4e74f9"
        android:layout_gravity="center"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/quitterTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quitter"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:textColor="#4e74f9"/>

    <ProgressBar
        android:id="@+id/progressbarregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:elevation="10dp"
        android:visibility="gone"/>
</LinearLayout>